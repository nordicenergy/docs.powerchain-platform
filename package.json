{
    "name": "core.docs.wavesplatform",
    "version": "0.1.0",
    "description": "Minimalistic doc generator with Vue component based layout system",
    "scripts": {
        "devW": "isDev=true vuepress dev docs-wavesplatform",
        "devE": "isDev=true vuepress dev docs-exchange",
        "buildW": "vuepress build docs-wavesplatform",
        "buildE": "vuepress build docs-exchange",
        "build:dev": "isDev=true yarn build",
        "building-and-serve": "yarn build:dev && yarn production-server",
        "view-info": "vuepress view-info",
        "show-help": "vuepress --help",
        "production-server": "node _docs-mixin/server/",
        "production-server:dev": "isDev=true port=3000 yarn production-server",
        "bootstrap": "yarn && lerna bootstrap && yarn tsc",
        "boot": "node scripts/bootstrap.js",
        "remote-version": "node scripts/remote-version.js",
        "dev:inspect": "NODE_OPTIONS='--inspect' ",
        "dev:docs": "yarn workspace docs dev",
        "build:docs": "yarn workspace docs build",
        "register-vuepress": "lerna exec --scope vuepress -- yarn link",
        "lint": "eslint packages --fix --ext .js,.vue",
        "release": "yarn --pure-lockfile && yarn tsc && node scripts/release.js",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
        "test": "node scripts/test.js",
        "tsc": "lerna run tsc"
    },
    "lint-staged": {
        "*.{js,vue}": [
            "eslint --fix",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/escape-html": "^0.0.20",
        "@types/fs-extra": "^5.0.4",
        "@types/globby": "^9.1.0",
        "@types/hash-sum": "^1.0.0",
        "@types/lru-cache": "^4.1.1",
        "@types/node": "^10.12.12",
        "@types/semver": "^6.0.0",
        "conventional-changelog-cli": "^2.0.21",
        "eslint": "^4.19.1",
        "eslint-plugin-jest": "^21.15.1",
        "eslint-plugin-vue-libs": "^3.0.0",
        "globby": "^9.2.0",
        "inquirer": "^6.2.0",
        "lerna": "3.13.4",
        "lint-staged": "^8.1.5",
        "minimist": "^1.2.0",
        "typescript": "^3.2.2",
        "yorkie": "^2.0.0"
    },
    "dependencies": {
        "@koa/cors": "^3.0.0",
        "@vuepress/plugin-google-analytics": "^1.2.0",
        "@vuepress/plugin-pwa": "^1.2.0",
        "axios": "^0.19.0",
        "element-resize-detector": "^1.1.15",
        "element-ui": "^2.9.1",
        "fuse.js": "^3.4.5",
        "jsdom": "^15.2.0",
        "koa": "^2.10.0",
        "koa-static": "^5.0.0",
        "medium-zoom": "^1.0.4",
        "monaco-editor": "^0.17.0",
        "perfect-scrollbar": "^1.4.0",
        "raw-loader": "^3.1.0",
        "strapi-sdk-javascript": "^0.3.1",
        "vuex": "^3.1.1",
        "vuex-persist": "^2.1.0",
        "webpack": "^4.41.2"
    }
}
